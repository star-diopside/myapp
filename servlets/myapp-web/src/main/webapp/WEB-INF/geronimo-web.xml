<?xml version="1.0" encoding="UTF-8"?>
<web:web-app xmlns:web="http://geronimo.apache.org/xml/ns/j2ee/web-2.0.1"
    xmlns:naming="http://geronimo.apache.org/xml/ns/naming-1.2"
    xmlns:sys="http://geronimo.apache.org/xml/ns/deployment-1.2">

    <sys:environment>
        <sys:dependencies>
            <sys:dependency>
                <sys:groupId>console.dbpool</sys:groupId>
                <sys:artifactId>jdbc_Management</sys:artifactId>
            </sys:dependency>
            <sys:dependency>
                <sys:groupId>console.dbpool</sys:groupId>
                <sys:artifactId>jdbc_Application</sys:artifactId>
            </sys:dependency>
            <sys:dependency>
                <sys:groupId>console.dbpool</sys:groupId>
                <sys:artifactId>jdbc_XAManagement</sys:artifactId>
            </sys:dependency>
            <sys:dependency>
                <sys:groupId>console.dbpool</sys:groupId>
                <sys:artifactId>jdbc_XAApplication</sys:artifactId>
            </sys:dependency>
        </sys:dependencies>
        <sys:hidden-classes>
            <sys:filter>javax.ws.rs</sys:filter>
            <sys:filter>ch.qos.logback</sys:filter>
            <sys:filter>com.thoughtworks.xstream</sys:filter>
            <sys:filter>org.apache.commons.logging</sys:filter>
            <sys:filter>org.apache.log4j</sys:filter>
            <sys:filter>org.apache.ws.commons.schema</sys:filter>
            <sys:filter>org.jboss.logging</sys:filter>
            <sys:filter>org.slf4j</sys:filter>
        </sys:hidden-classes>
    </sys:environment>

    <naming:resource-ref>
        <naming:ref-name>jdbc/Management</naming:ref-name>
        <naming:resource-link>jdbc/Management</naming:resource-link>
    </naming:resource-ref>

    <naming:resource-ref>
        <naming:ref-name>jdbc/Application</naming:ref-name>
        <naming:resource-link>jdbc/Application</naming:resource-link>
    </naming:resource-ref>

    <naming:resource-ref>
        <naming:ref-name>jdbc/XAManagement</naming:ref-name>
        <naming:resource-link>jdbc/XAManagement</naming:resource-link>
    </naming:resource-ref>

    <naming:resource-ref>
        <naming:ref-name>jdbc/XAApplication</naming:ref-name>
        <naming:resource-link>jdbc/XAApplication</naming:resource-link>
    </naming:resource-ref>

</web:web-app>
