<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="jp.myapp.data.entity">
    <class name="UsersImpl" table="USERS" dynamic-insert="true" dynamic-update="true">
        <id name="userId" column="USER_ID" type="string" />
        <version name="version" column="VERSION" type="integer" />
        <property name="username" column="USERNAME" not-null="true" type="string" />
        <property name="password" column="PASSWORD" not-null="true" type="string" />
        <property name="passwordUpdatedDatetime" column="PASSWORD_UPDATED_DATETIME" not-null="true" type="timestamp" />
        <property name="enabled" column="ENABLED" not-null="true" type="boolean" />
        <property name="provisionalRegistration" column="PROVISIONAL_REGISTRATION" not-null="true" type="boolean" />
        <property name="loginErrorCount" column="LOGIN_ERROR_COUNT" not-null="true" type="integer" />
        <property name="lastLoginDatetime" column="LAST_LOGIN_DATETIME" not-null="false" type="timestamp" />
        <property name="logoutDatetime" column="LOGOUT_DATETIME" not-null="false" type="timestamp" />
        <property name="registerDatetime" column="REGISTER_DATETIME" not-null="true" type="timestamp" />
        <property name="registerUserId" column="REGISTER_USER_ID" not-null="true" type="string" />
        <property name="updatedDatetime" column="UPDATED_DATETIME" not-null="true" type="timestamp" />
        <property name="updatedUserId" column="UPDATED_USER_ID" not-null="true" type="string" />
    </class>
</hibernate-mapping>
